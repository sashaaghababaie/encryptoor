{
  "name": "encryptoor",
  "displayName": "Encryptoor",
  "version": "1.13.1",
  "description": "A local text encryptor.",
  "author": {
    "name": "Sasha Aghababaie"
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "fuse.js": "^7.1.0",
    "motion": "^12.19.2",
    "nanoid": "^5.1.5",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "semver": "^7.7.4",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"react-scripts start\" \"npm:electron\"",
    "electron": "wait-on tcp:127.0.0.1:3000 && electron .",
    "dist": "react-scripts build && electron-builder",
    "dist:mac": "react-scripts build && electron-builder --mac",
    "dist:mac:intel": "react-scripts build && electron-builder --mac --x64",
    "dist:mac:apple": "react-scripts build && electron-builder --mac --arm64",
    "dist:mac:universal": "react-scripts build && electron-builder --mac --universal",
    "dist:win": "react-scripts build && electron-builder --win",
    "dist:win32": "react-scripts build && electron-builder --win --ia32",
    "dist:win64": "react-scripts build && electron-builder --win --x64",
    "dist:all": "react-scripts build && electron-builder --mac --win --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "electron-prebuilt-compile": "8.2.0",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "asar": true,
    "appId": "com.encryptoor.app",
    "productName": "Encryptoor",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "src/utils/error.js",
      "public/electron.js",
      "public/preload.js",
      "public/ipc.js",
      "api/**/*",
      "build/**/*",
      "!build/**/*.map",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build-resources",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "icon": "build-resources/icon.icns",
      "darkModeSupport": true,
      "identity": null,
      "sign": false,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "iconSize": 128,
      "title": "Encryptoor-Installer",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "sign": false
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "build-resources/icon.ico",
    "publisherName": "Sasha Aghababaie",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Encryptoor",
    "uninstallDisplayName": "Encryptor Uninstaller",
    "installerIcon": "build-resources/icon.ico",
    "uninstallerIcon": "build-resources/icon.ico"
  }
}
