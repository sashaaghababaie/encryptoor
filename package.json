{
  "name": "local-encryptor",
  "displayName": "Encryptoor",
  "version": "1.10.0",
  "author": {
    "name": "Sasha Aghababaie",
    "description": "A local encryptor for secure text stuff."
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "fuse.js": "^7.1.0",
    "motion": "^12.19.2",
    "nanoid": "^5.1.5",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.14.2",
    "react-scripts": "5.0.1",
    "semver": "^7.7.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"react-scripts start\" \"npm:electron\"",
    "electron": "wait-on tcp:127.0.0.1:3000 && electron .",
    "dist": "react-scripts build && electron-builder",
    "dist:win32": "react-scripts build && electron-builder --win --x32",
    "dist:win64": "react-scripts build && electron-builder --win --x64"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "electron-prebuilt-compile": "8.2.0",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "asar": true,
    "appId": "com.name.app",
    "productName": "app-name",
    "files": [
      "public/icon.png",
      "api/*.js",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icon.png",
      "target": [
        "nsis",
        "zip",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz",
        "zip"
      ]
    }
  }
}
